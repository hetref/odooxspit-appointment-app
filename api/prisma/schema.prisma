generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                   @id @default(cuid())
  email                   String                   @unique
  password                String
  name                    String?
  emailVerified           Boolean                  @default(false)
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  role                    Role                     @default(USER)
  isMember                Boolean                  @default(false)
  organizationId          String?
  phone                   String?
  emailVerificationTokens EmailVerificationToken[]
  adminOrganization       Organization?            @relation("OrganizationAdmin")
  passwordResetTokens     PasswordResetToken[]
  refreshTokens           RefreshToken[]
  organization            Organization?            @relation("OrganizationMembers", fields: [organizationId], references: [id])
  allowedAppointments     Appointment[]            @relation("AppointmentAllowedUsers")
  bookings                Booking[]
  assignedBookings        Booking[]                @relation("AssignedBookings")

  @@index([organizationId])
}

model RefreshToken {
  id         String   @id @default(cuid())
  token      String   @unique
  userId     String
  expiresAt  DateTime
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  deviceName String?
  deviceType String?
  browser    String?
  os         String?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, revoked])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([email])
}

model Organization {
  id            String        @id @default(cuid())
  name          String
  location      String
  description   String?
  businessHours Json
  adminId       String        @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
  admin         User          @relation("OrganizationAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  resources     Resource[]
  members       User[]        @relation("OrganizationMembers")

  @@index([adminId])
}

model Resource {
  id                  String        @id @default(cuid())
  name                String
  capacity            Int
  organizationId      String
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  organization        Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  allowedAppointments Appointment[] @relation("AppointmentAllowedResources")
  bookings            Booking[]

  @@index([organizationId])
}

model Appointment {
  id                  String              @id @default(cuid())
  title               String
  description         String?
  durationMinutes     Int
  bookType            AppointmentBookType
  assignmentType      AssignmentType
  allowMultipleSlots  Boolean             @default(false)
  maxSlotsPerBooking  Int?
  price               Int?
  cancellationHours   Int
  schedule            Json
  questions           Json
  isPublished         Boolean             @default(false)
  secretLink          String?             @unique
  expiryTime          DateTime?
  expiryCapacity      Int?
  bookingsCount       Int                 @default(0)
  confirmationMessage String?
  introMessage        String?
  isPaid              Boolean             @default(false)
  location            String?
  picture             String?
  organizationId      String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  organization        Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  allowedResources    Resource[]          @relation("AppointmentAllowedResources")
  allowedUsers        User[]              @relation("AppointmentAllowedUsers")
  bookings            Booking[]

  @@index([organizationId])
  @@index([isPublished])
  @@index([secretLink])
}

enum Role {
  USER
  ORGANIZATION
}

enum AppointmentBookType {
  USER
  RESOURCE
}

enum AssignmentType {
  AUTOMATIC
  BY_VISITOR
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Booking {
  id             String        @id @default(cuid())
  appointmentId  String
  userId         String
  resourceId     String?
  assignedUserId String?
  startTime      DateTime
  endTime        DateTime
  numberOfSlots  Int           @default(1)
  userResponses  Json?
  paymentStatus  PaymentStatus @default(PENDING)
  bookingStatus  BookingStatus @default(PENDING)
  totalAmount    Int?
  notes          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointment    Appointment   @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource       Resource?     @relation(fields: [resourceId], references: [id])
  assignedUser   User?         @relation("AssignedBookings", fields: [assignedUserId], references: [id])

  @@index([appointmentId])
  @@index([userId])
  @@index([resourceId])
  @@index([assignedUserId])
  @@index([startTime])
  @@index([bookingStatus])
}
